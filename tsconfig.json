{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "default",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ],
      "~/*": [
        "./src/*"
      ],
      "test-utils": [
        "./__tests__/utils/test-utils.tsx"
      ]
    },
    "target": "esnext",
    "jsx": "preserve",
    "module": "esnext",
    "outDir": "build",
    "declarationDir": "types",
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "strict": true,
    "newLine": "lf",
    "noEmit": false,
    "allowJs": false,
    "sourceMap": true,
    "composite": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    "./jest.config.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}